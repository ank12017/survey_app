<p id="notice"><%= notice %></p>

<h1>Surveys</h1>

<table  style="width:10%">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
      <td><%= survey.name %></td>
      <% if !check_survey(survey).blank? %>
        <td><%= link_to 'result',  user_result_test_surveys_path(id: survey.id) %></td>
      <% else %>
        <td><%= link_to 'Test', test_survey_path(survey) %></td>
      <% end %> 
      </tr>
    <% end %>
  </tbody>
</table>

<br>
